<p id="notice"><%= notice %></p>

<h1>Gossips</h1>
<% if false %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <td><%= link_to 'Show', gossip %></td>
        <td><%= link_to 'Edit', edit_gossip_path(gossip) %></td>
        <td><%= link_to 'Destroy', gossip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gossip', new_gossip_path %>
<%end%>
 <div class="row">
<%@gossips.each do |x| %>
<p id="notice"><%= notice %></p>

  <div class="card-body text-center mb-3" style="width: 20rem;">
    <div class="shadow-lg p-3 mb-5 bg-white rounded">

      <h5 class="card-title"><%=x.anonymous_gossiper%></h5>
      <p class="card-text"><%= x.content %></p>
      <%= link_to 'Edit', edit_gossip_path(x),class: "btn btn-primary" %>
      <%= link_to 'Show', gossip_path(x.id), class: "btn btn-primary"%>
      <%= link_to 'Destroy', gossip_path(x.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
  </div>
</div>
<% end%>
</div>
